{
  "name": "dp-maps-js",
  "version": "0.1.0",
  "description": "Reusable map component with support for Ordnance Survey tiles",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "webpack": "webpack",
    "build:dev": "webpack --config webpack/webpack.config.js --env mode=development",
    "build:prod": "webpack --config webpack/webpack.config.js --env mode=production",
    "build:analyze": "webpack --config webpack/webpack.config.js --env mode=development --env analyze=true",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest --passWithNoTests",
    "docs": "typedoc --darkHighlightTheme dark-plus --out docs src/ts && touch docs/.nojekyll",
    "release": "npm run build:prod && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joegasewicz/jg-design-system.git"
  },
  "author": "jgasewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joegasewicz/jg-design-system/issues"
  },
  "homepage": "https://github.com/joegasewicz/jg-design-system#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/mapbox-gl": "^2.6.3",
    "css-loader": "^6.7.1",
    "jest": "^27.5.1",
    "mini-css-extract-plugin": "^2.6.0",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/spec/*.spec.{ts,js}"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "mapbox-gl": "^2.x"
  },
  "files": [
    "lib"
  ]
}
