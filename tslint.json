{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "error",
            "options": ["log"]
        },
        "jsdoc-format": false,
        "max-classes-per-file": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}