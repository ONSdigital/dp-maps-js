{
    "compilerOptions": {
        "lib": ["dom", "esnext"],
        "outDir": "lib",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "spec"]
}